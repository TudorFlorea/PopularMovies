<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rating_cv"
    android:background="#fff"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/details_activity_margin"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/rating_image_width"
                android:layout_height="@dimen/rating_image_height"
                android:src="@drawable/ic_star_yellow"
                android:layout_margin="8dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/movie_vote_average_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/rating_image_width"
                android:layout_height="@dimen/rating_image_height"
                android:src="@drawable/ic_person_black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/movie_vote_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5682"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/rating_image_width"
                android:layout_height="@dimen/rating_image_height"
                android:src="@drawable/ic_trending_up"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/movie_popularity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="584"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>